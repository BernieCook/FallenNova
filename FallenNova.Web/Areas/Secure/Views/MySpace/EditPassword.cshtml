@model FallenNova.Web.Areas.Secure.Models.MySpaceModel.EditPasswordModel

@{
    ViewBag.Title = "Edit Password";
}

@Html.Partial("_MySpaceHeader")

<h3>Edit Password</h3>

<p>
    New passwords need to have at least 6 characters in length.
</p>

@Bootstrap.Validation("The password update was unsuccessful. Please correct the errors listed and try again.", ViewData.ModelState)

@using (Html.BeginForm((string)ViewBag.FormAction, "MySpace")) 
{
    <div class="control-group">
        @Html.LabelFor(m => m.CurrentPassword, new { @class = "control-label" })
        <div class="controls">
            @Html.PasswordFor(m => m.CurrentPassword, new { @class = "input-xlarge" })
        </div>
    </div>
    <div class="control-group">
        @Html.LabelFor(m => m.NewPassword, new { @class = "control-label" })
        <div class="controls">
            @Html.PasswordFor(m => m.NewPassword, new { @class = "input-xlarge" })
        </div>
    </div>
    <div class="control-group">
        @Html.LabelFor(m => m.ConfirmNewPassword, new { @class = "control-label" })
        <div class="controls">
            @Html.PasswordFor(m => m.ConfirmNewPassword, new { @class = "input-xlarge" })
        </div>
    </div>
    <div class="control-group">
        <div class="controls">
            <button type="submit" class="btn btn-primary">Edit Password</button>
            <a href="@Url.Action("Index", "MySpace", new { Area = "Secure" })" class="btn">Cancel</a>
        </div>
    </div>
}
